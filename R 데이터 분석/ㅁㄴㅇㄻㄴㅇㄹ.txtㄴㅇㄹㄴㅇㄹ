예제 1


x<-2
> if(x%%2 == 0) {
     print("Even")
 } else {
     print("odd")
 }

예제 2
mygrade <- function() {
  print("0-100 사이의 점수를 입력하세요.")
score <- as.numeric(readline())
if (score<=100 & score>=90) {
  grade <- "A"
  } else if (score<90 & score>=80 {
  grade <- "B"
  } else {
  grade <- "C"
  }
  print("당신의 학점은 다음과 같습니다.")
print(grade)
}

mygrade()